mixin sub-menu(items,path)
    if Array.isArray(items)
        ul 
            each item in items 
                if item
                    li 
                        a(href=`${path}/${item.slug}`) #{item.title}
                        if Array.isArray(item.children) && item.children.length > 0
                            +sub-menu(item.children,path)
