mixin alert-success(time)
    - if(messages.success)
        .message.info
            //div.alert.alert-success(show-alert="true" data-time="5000")= messages.success
            div(
                class="alert alert-success"
                show-alert
                data-time=time
            ) #{messages.success}  <span close-alert>x</span>

mixin alert-error(time)
    - if(messages?.error&& messages.error.length > 0)
        .message.info
            //div.alert.alert-success(show-alert="true" data-time="5000")= messages.success
            div(
                class="alert alert-danger"
                show-alert
                data-time=time
            ) #{messages.error}  <span close-alert>x</span>